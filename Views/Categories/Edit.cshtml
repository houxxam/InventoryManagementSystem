@model InvWebApp.Models.Categorie

@{
    ViewData["Title"] = "Edit";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-start">
            <div class="page-title">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-end">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/Categories">Categorie</a></li>
                    <li>@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row text-capitalise mb-3">
        <h2 class="special-heading">categorie</h2>
        <p>Edit categorie</p>
    </div>
    <div class="row d-flex flex-column align-items-center">
        <div class="col-md-6 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title mb-3">Edit Categorie</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id"/>
                                <div class="form-group">
                                    <label asp-for="CategorieName" class="control-label mb-1">Categorie Name :</label>
                                    <input asp-for="CategorieName" class="form-control mb-3"/>
                                    <span asp-validation-for="CategorieName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary"/>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <a class="mt-3 btn btn-secondary" asp-action="Index"><i class="fa-solid fa-angle-left"></i>&nbsp;Back to List</a>
            </div>
        </div>
        
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
