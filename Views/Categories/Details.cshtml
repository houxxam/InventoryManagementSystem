@model InvWebApp.Models.Categorie

@{
    ViewData["Title"] = "Details";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-start">
            <div class="page-title">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-end">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/Categories">Categorie</a></li>
                    <li>@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container text-capitalise mb-5">
    <h2 class="special-heading">categorie</h2>
    <p>Categorie Details</p>
</div>
<div class="bg-white p-3 m-3">

    <div>
        <p>Categorie</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Categorie Name : 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategorieName)
            </dd>
        </dl>
    </div>
    

</div>

<div class="bg-white p-3 m-3">
    <a class="btn btn-secondary" asp-action="Index"><i class="fa-solid fa-angle-left"></i>&nbsp;Back to List</a>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.Id"><i class="fa-solid fa-angle-right"></i>&nbsp;Edit</a>
    </div>