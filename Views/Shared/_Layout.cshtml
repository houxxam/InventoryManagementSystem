<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManagementSystem</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;0,900;1,400;1,700;1,900&display=swap" rel="stylesheet">
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!--Data table-->
    <link href="~/css/jquery.datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div class="navbar-header">
                <a class="navbar-brand" href="/"><img src="/images/logo.png" alt="Logo"></a>
                <a class="navbar-brand hidden" href="/"><img src="/images/logo2.png" alt="Logo"></a>
            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="/"> <i class="fa-solid fa-gauge"></i> Dashboard </a>
                    </li>

                    <li>
                        <a href="/Materiels"> <i class="fa-solid fa-desktop"></i> Materiels </a>
                    </li>

                    <li>
                        <a href="/Categories"> <i class="fa-regular fa-folder-open"></i> Categories </a>
                    </li>

                    <li>
                        <a href="/Services"> <i class="fa-solid fa-hospital"></i> Services </a>
                    </li>

                    <li>
                        <a href="/Users"> <i class="fa-solid fa-user"></i> User </a>
                    </li>
                    <li>
                        <a href="/LogList"> <i class="fa-solid fa-server"></i> Logs </a>
                    </li>
                    
                    <li>
                        <a asp-controller="Home" asp-action="LogOut"> <i class="fa-solid fa-right-from-bracket"></i> Logout </a>
                    </li>

                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside><!-- /#left-panel -->

    <div id="right-panel" class="right-panel">
        <!-- Header-->
        <header id="header" class="header">
            <div class="header-menu">
                <div class="col-sm-7">
                    <div class="header-left">
                        <button class="search-trigger"><i class="fa fa-search"></i></button>
                        <div class="form-inline">
                            <form class="search-form">
                                <input class="form-control mr-sm-2" type="text" placeholder="Search ..." aria-label="Search">
                                <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="user-area dropdown float-right">
                        <a href="/Users" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img class="user-avatar rounded-circle" src="/images/admin.jpg" alt="User Avatar">
                        </a>

                    </div>
                </div>
            </div>

        </header><!-- /header -->
        <!-- Header-->
        <!-- Body -->
        @RenderBody()
        <!-- Body -->
    </div>






    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/all.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--Data table-->
    <script src="~/js/jquery.datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
