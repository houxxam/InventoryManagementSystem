@model IEnumerable<InvWebApp.Models.Service>

@{
    ViewData["Title"] = "Service";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-start">
            <div class="page-title">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-end">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/">Dashboard</a></li>
                    <li>@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>





<div class="container-fluid">
    <div class="container text-capitalise">
        <h2 class="special-heading">Service</h2>
        <p>Service List</p>
    </div>
    <div class="col-lg-12 col-md-12 p-1">
        <a class="btn btn-primary mb-3" asp-action="Create">Create New</a>
        <div class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Services</strong>
            </div>
            <div class="card-body">


                <table class="table" id="myDatatable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>@Html.DisplayNameFor(model => model.ServiceName)</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td><a class="table-name-a" href="/Services/Details/@item.Id">@Html.DisplayFor(modelItem => item.ServiceName)</a></td>
                                <td><a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i>&nbsp;Edit</a> </td>
                                <td> <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i>&nbsp;Details</a></td>
                                <td> <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i>&nbsp;Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>










