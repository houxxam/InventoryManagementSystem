@model InvWebApp.Models.Materiel

@{
    ViewData["Title"] = "Details";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-start">
            <div class="page-title">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-end">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/Materiels">Materiel</a></li>
                    <li>@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container text-capitalise mb-5">
    <h2 class="special-heading">materiel</h2>
    <p>materiel Details</p>
</div>
<div class="bg-white p-3 m-3">

    <div>
        <p>Materiel</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Materiel Name :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaterielName)
            </dd>
            <dt class="col-sm-2">
                Creation Date :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                Serial Number :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SerialNumber)
            </dd>
            <dt class="col-sm-2">
                Inventory Number :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InventoryNumber)
            </dd>
            <dt class="col-sm-2">
                Categorie :
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categorie.CategorieName)
            </dd>
            <div class="row">
                <dt class="col-sm-2">
                    Service :
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Service.ServiceName)
                </dd>
                <dt class="col-sm-2">
                    Service Group:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.serviceGroup.GroupName)
                </dd>
            </div>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaterielOwner)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaterielOwner)
            </dd>
        </dl>
    </div>
</div>
<div class="bg-white p-3 m-3">
    <a class="btn btn-secondary" asp-action="Index"><i class="fa-solid fa-angle-left"></i>&nbsp;Back to List</a>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.Id"><i class="fa-solid fa-angle-right"></i>&nbsp;Edit</a>
</div>



