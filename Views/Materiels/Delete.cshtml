@model InvWebApp.Models.Materiel

@{
    ViewData["Title"] = "Delete";
}



<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-start">
            <div class="page-title">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-end">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/Materiels">Materiel</a></li>
                    <li>@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container text-capitalise mb-5">
    <h2 class="special-heading">Materiel</h2>
    <p>Materiel Delete</p>
</div>
<div class="bg-white p-3 m-3">
    <div>
        <h4>Materiel : </h4>
        <hr />
        <h4 class="mb-3">Delete</h4>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaterielName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaterielName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SerialNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SerialNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InventoryNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InventoryNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categorie)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categorie.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Service)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.Id)
            </dd>
        </dl>

        <p class="alert alert-danger col-md-4" role="alert">Are you sure you want to delete <strong>@Html.DisplayFor(model => model.MaterielName)</strong> ?</p>
    </div>
</div>

<div class="bg-white p-3 m-3">




    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-secondary" asp-action="Index"><i class="fa-solid fa-angle-left"></i>&nbsp;Back to List</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>


